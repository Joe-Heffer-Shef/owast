{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://localhost/schema/61af8a8652f463d1fbcc1eff/schema.json",
  "title": "Tool",
  "description": "A machine",
  "type": "object",
  "properties": {
    "code": {
      "type": "string",
      "description": "This could be a tool assembly ID"
    },
    "serial": {
      "type": "string"
    },
    "vericut_number": {
      "type": "integer",
      "description": "Identifier for simulation software",
      "minimum": 1
    },
    "supplier": {
      "description": "Who provided this item",
      "type": "string",
      "enum": [
        "OSG",
        "Sumitomo",
        "Sandvik"
      ]
    },
    "received": {
      "description": "Was this obtained from the supplier?",
      "type": "boolean",
      "default": false
    },
    "type": {
      "type": "string",
      "enum": [
        "Mill (Spring)",
        "Mill (Compressive)",
        "Drill"
      ]
    }
  },
  "required": [
    "code",
    "received"
  ]
}